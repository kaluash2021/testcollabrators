/categories:
  get:
    description: Get list of products by category
    queryParameters:
      catagoryname:
        type: string
        required: True
        example: "Computers"
      category_id:
        type: integer
        required: True
        example: 1
    responses:
      200:
        body:
          application/json:
            example:
              [{
                "categoryid": 100,
                "name": "Laptops"
              },
              {
                "categoryid": 101,
                "name": "mobiles"
              },
              {
                "categoryid": 102,
                "name": "TV"
              }]
      404:
        body:
          application/json:
            example:
              {
                "message": "Not found"
               }
      500:
        body:
          application/json:
            example:
              {
                "message": "Server error"
               }
        
