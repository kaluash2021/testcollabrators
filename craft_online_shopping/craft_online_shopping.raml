#%RAML 1.0
title: craft_online_shopping
description: Craft Rest API Documentation
version: 1.0
types:
  productDataType: !include Datatypes/product.raml
/products:
  description: get list of all products
  get:
    queryParameters:
      product_id:
        type: integer
        description: id of the product
        required: false
        example: 7788
      name:
        type: string
        description: name of the product
        maxLength: 8
        minLength: 3
        required: false
        example: Lenovo
    headers:
      connection-type:
      session:
        description: connection sesssion is stored
        type: string
        required: false
    responses:
      200:
        body:
          application/json:
            type: productDataType
            example: !include examples/product.raml
      404:
        body:
          application/json:
            example:
              {
                "message": "Not found"
              }
      500:
        body:
          application/json:
            example:
              {
                "message": "Server error"
              }           
  /{product_id}:
    description: Get specfic product by id
    get:
      description: basic http status respones
      responses:
        200:
          body:
            application/json:
              type: productDataType
              example: !Include examples/product.raml
                 
        404:
          body:
            application/json:
              examples:
                {
                "message": "Not found"
              }
        500:
          body:
            application/json:
              example:
                {
                "message": "Server error"
              }
                
