              },
              {
                "user_id": 45,
                "username": "john"
                
              }]

      404:
        body:
          application/json:
            example:
                {
                "message": "Not found"
               }
      500:
          body:
            application/json:
              example:
                {
                "message": "Server error"
              }

 
